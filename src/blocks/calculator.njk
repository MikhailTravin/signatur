<div class="block-calculator">
    <div class="container">
        <img loading="lazy" src="img/image6.webp" alt="" class="block-calculator__pic1">
        <img loading="lazy" src="img/image25.webp" alt="" class="block-calculator__pic2">
        <div class="block-calculator__container">
            <h2 class="title2">
                Ипотечный калькулятор
            </h2>
            <div class="block-calculator__content">
                <div class="block-calculator__body">
                    <div class="block-calculator__top">
                        <div class="filter-apartments__column range1">
                            <div class="filter-apartments__title">Стоимость недвижимости</div>
                            <div class="filter-apartments__item">
                                <div class="filter-apartments__rating">
                                    <div class="filter-apartments__price price1">
                                        <input autocomplete="off" type="text" name="form[]" placeholder="3 665 000">
                                        <span class="currency">₽</span>
                                    </div>
                                    <div class="filter-apartments__range1"></div>
                                </div>
                            </div>
                        </div>
                        <div class="filter-apartments__column range2">
                            <div class="filter-apartments__title">Первоначальный взнос</div>
                            <div class="filter-apartments__item">
                                <div class="filter-apartments__rating">
                                    <div class="filter-apartments__buttons">
                                        <button type="button" data-number="5"
                                            class="filter-apartments__button">5%</button>
                                        <button type="button" data-number="10"
                                            class="filter-apartments__button">10%</button>
                                        <button type="button" data-number="20"
                                            class="filter-apartments__button">20%</button>
                                        <button type="button" data-number="30"
                                            class="filter-apartments__button">30%</button>
                                    </div>
                                    <div class="filter-apartments__price price2">
                                        <input autocomplete="off" type="text" name="form[]" placeholder="5">
                                        <span class="currency">%</span>
                                    </div>
                                    <div class="filter-apartments__range2"></div>
                                </div>
                            </div>
                        </div>
                        <div class="filter-apartments__column range3">
                            <div class="filter-apartments__title">Срок кредита</div>
                            <div class="filter-apartments__item">
                                <div class="filter-apartments__rating">
                                    <div class="filter-apartments__buttons">
                                        <button type="button" data-number="5"
                                            class="filter-apartments__button">5</button>
                                        <button type="button" data-number="10"
                                            class="filter-apartments__button">10</button>
                                        <button type="button" data-number="20"
                                            class="filter-apartments__button">20</button>
                                        <button type="button" data-number="30"
                                            class="filter-apartments__button">30</button>
                                    </div>
                                    <div class="filter-apartments__price price3">
                                        <input autocomplete="off" type="text" name="form[]" placeholder="5">
                                        <span class="currency">лет</span>
                                    </div>
                                    <div class="filter-apartments__range3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block-calculator__bottom">
                        <div class="filter-apartments__column range4">
                            <div class="filter-apartments__title">Процентная ставка</div>
                            <div class="filter-apartments__item">
                                <div class="filter-apartments__rating">
                                    <div class="filter-apartments__buttons">
                                        <button type="button" data-number="16" class="filter-apartments__button">Базовая
                                            от
                                            16%</button>
                                        <button type="button" data-number="3.5"
                                            class="filter-apartments__button">Семейная
                                            3,5%</button>
                                        <button type="button" data-number="5" class="filter-apartments__button">IT от
                                            5%</button>
                                        <button type="button" data-number="13.1"
                                            class="filter-apartments__button">Военная
                                            от 13,1%</button>
                                    </div>
                                    <div class="filter-apartments__price price4">
                                        <input autocomplete="off" type="text" name="form[]" placeholder="7.3">
                                        <span class="currency">%</span>
                                    </div>
                                    <div class="filter-apartments__range4"></div>
                                </div>
                            </div>
                        </div>
                        <div class="block-calculator__results">
                            <div class="filter-apartments__title">Ваш ежемесячный платеж</div>
                            <div class="block-calculator__total">
                                21 422₽
                            </div>
                            <ul>
                                <li>
                                    <div class="block-calculator__name">Кредит</div>
                                    <div class="block-calculator__value">2 700 000₽</div>
                                </li>
                                <li>
                                    <div class="block-calculator__name">Необходимый доход</div>
                                    <div class="block-calculator__value">2 700 000₽</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <a href="#" class="block-calculator__button btn">
                    <span>Получить консультацию</span>
                    <svg aria-hidden="true" width="12" height="8">
                        <use xlink:href="img/sprite.svg#arrow1"></use>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>